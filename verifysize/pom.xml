<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>agimatec.maven.plugins</groupId>
  <artifactId>maven-sizewatch-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <version>1.0</version>
  <name>Verify the size of a file</name>

  <distributionManagement>
    <site>
      <id>${agimatec-site-id}</id>
      <url>${agimatec-site-url}/agimatec-tools/site</url>
    </site>
    <snapshotRepository>
      <id>deployment.dav</id>
      <name>Agimatec Snapshot Artifacts</name>
      <url>${deployment-dav-url}</url>
    </snapshotRepository>
    <repository>
      <id>internal.dav</id>
      <name>Agimatec Artifacts</name>
      <url>${internal-dav-url}</url>
    </repository>
  </distributionManagement>

  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0</version>
    </dependency>
  </dependencies>
</project>
